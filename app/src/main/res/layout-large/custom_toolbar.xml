<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundtype2">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GV1_0.85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GV1_0.03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GV1_0.13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.13" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/GV1_0.15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2" />

        <ImageView
            android:id="@+id/menuItem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/three_lines"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="47:55"
            app:layout_constraintEnd_toStartOf="@id/GV1_0.13"
            app:layout_constraintStart_toStartOf="@id/GV1_0.03"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/toolbar_title_font"
            android:gravity="center"
            android:text="VOCABULARIUM"
            android:textColor="@color/text2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/GV1_0.85"
            app:layout_constraintStart_toStartOf="@+id/GV1_0.15"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/isLoggedInImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="3:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/GV1_0.85"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile_vector_white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
