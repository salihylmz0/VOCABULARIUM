<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startOfItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endOfItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topOfItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.06"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomOfItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.93"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="5:1"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/mainbackground"
            app:layout_constraintBottom_toBottomOf="@id/bottomOfItem"
            app:layout_constraintEnd_toEndOf="@id/endOfItem"
            app:layout_constraintStart_toStartOf="@id/startOfItem"
            app:layout_constraintTop_toTopOf="@id/topOfItem">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background3">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/startOfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.08"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/endOfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.85"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/endOfThick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.96"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/topOfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.1"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/bottomOfName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.8"/>
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/middleOfItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.55"/>
                <TextView
                    android:id="@+id/myWordsName"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/anton"
                    android:gravity="center_vertical"
                    android:text="Procrastinate"
                    android:textColor="@color/mainbackground"
                    app:layout_constraintBottom_toTopOf="@id/middleOfItem"
                    app:layout_constraintEnd_toStartOf="@+id/endOfName"
                    app:layout_constraintStart_toStartOf="@+id/startOfName"
                    app:layout_constraintTop_toTopOf="@+id/topOfName" />

                <TextView
                    android:id="@+id/myWordsLevel"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/general_write_font"
                    android:gravity="center_vertical"
                    android:text="Upper Intermediate"
                    android:textColor="@color/mainbackground"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/bottomOfName"
                    app:layout_constraintEnd_toStartOf="@+id/endOfName"
                    app:layout_constraintStart_toStartOf="@+id/startOfName"
                    app:layout_constraintTop_toBottomOf="@+id/middleOfItem" />

                <ImageView
                    android:id="@+id/myWordsTick"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:2"
                    app:layout_constraintEnd_toEndOf="@+id/endOfThick"
                    app:layout_constraintStart_toStartOf="@+id/endOfName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/my_words_tick_positive" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
